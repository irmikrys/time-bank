@import 'theme.styl'

.main
  margin-bottom 2rem

  .container
    margin-top 2rem

    .details
      width 100%
      padding 0 100px 25px 100px

      label
        color #fff
        font-weight 500

      .paragraph
        box-shadow 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24)
        justify-content center
        align-items center
        margin-top 2rem

        h3
          color #fff
          background-color theme_dark
          text-align center
          padding 10px
          margin 0
          width 100%

        div
          padding 25px
          background-color #fff

        .more-info
          padding-left 25px
          padding-bottom 25px
          padding-right 25px
          padding-top 0

        .bold
          font-weight bold
