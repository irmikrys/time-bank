@import 'theme.styl'

.main
  margin-bottom 2rem

  .container
    margin-top 2rem

    .details
      width 90%
      box-shadow 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24)
      justify-content center
      align-items center
      background-color #fff
      padding-left 15px
      padding-right 15px
      padding-bottom 25px
      padding-top 15px
      margin auto

      label
        padding-top 30px
        padding-bottom 10px

      h3
        color #fff
        background-color theme_dark
        text-align center
        margin-top 15px
        margin-bottom 15px
        padding-top 15px
        padding-bottom 10px
        width 100%

