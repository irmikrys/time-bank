.profile-view
  width 100%
  overflow hidden

  .drop-down-zone, .avatar-container
    display table
    margin 0 auto

  .drop-down-zone > div
    width 204px !important
    height 204px !important
    cursor pointer

  #avatar, #avatar-edit
    width 200px
    height 200px

table
  width 100%

  tr
    height 40px

.edit-modal
  position fixed
  padding-top 4%
  top 0
  left 0
  right 0
  max-width 960px
  z-index 10

  .profile-view
    margin-top 2rem
    overflow-y auto
    min-height 430px

    div.column:nth-child(2)
      border-left 1px solid #c9c9c9

    @media (max-width: 720px)
      div.column:nth-child(2)
        border none

  .edit-form
    display table
    margin 0 auto
    padding-left 10%
    padding-right 10%

    input
      color #333

    button
      width 100%

    .geosuggest__suggests
      border 1px solid #f2f2f2

#cover
  position fixed
  top 0
  left 0
  background rgba(0,0,0,0.9)
  z-index 5
  width 100%;
  height 100%

#glyph
  width 10%
  min-width 60px

  .glyphicon
    display block
    text-align center
    width 40px
    height 40px
    padding 9px
    border-radius 50%
    background-color theme_dark
    color #fff

#date
  width 30%
  min-width 70px

#type
  width 15%
  min-width 60px

#title
  width 35%
  min-width 100px

#details
  width 10%
  min-width 60px
  align-content center

.transaction
  padding-top 0!important
  align center

  .glyphicon
    font-size 20px

  table
    margin 8px
    width 100%
