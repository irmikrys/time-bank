.profile-view
  width 100%
  overflow hidden

  .drop-down-zone
    display table
    margin 0 auto

  .drop-down-zone > div
    width 204px !important
    height 204px !important
    cursor pointer

    #avatar
      width 200px
      height 200px

table
  width 100%

  tr
    height 40px

#editProfile
  margin-top 20px
  float right
  width 100px

.edition-page
  padding 4% 0 0

  h3
    position relative
    margin 0 auto 0
    box-shadow 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24)
    color #fff
    background-color theme_dark
    text-align center
    padding 10px
    max-width 360px
