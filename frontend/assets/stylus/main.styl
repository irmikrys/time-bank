@import url(https://fonts.googleapis.com/css?family=Roboto:300)

theme_dark = #0a4f7d
theme_light = #41799c

body
  background theme_dark
  background -webkit-linear-gradient(right, theme_dark, theme_light)
  background -moz-linear-gradient(right, theme_dark, theme_light)
  background -o-linear-gradient(right, theme_dark, theme_light)
  background linear-gradient(to left, theme_dark, theme_light)
  font-family "Roboto", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  padding 0 1rem 1rem 1rem

nav a
  color #ffffff

button
  font-family "Roboto", sans-serif
  text-transform uppercase
  outline 0
  background theme_dark
  border 0
  padding 15px
  color #ffffff
  font-size 14px
  -webkit-transition all 0.3 ease
  transition all 0.3 ease
  cursor: pointer

.login-page
  padding 8% 0 0

.register-page
  padding 4% 0 0

.form-container
  position relative
  z-index 1
  background #ffffff
  max-width: 360px
  margin 0 auto 100px
  padding 45px
  text-align center
  box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24)

  input, textarea
    font-family "Roboto", sans-serif
    outline 0
    background #f2f2f2
    width 100%
    border 0
    margin 0 0 15px
    padding 15px
    box-sizing border-box
    font-size 14px
    resize none

  button
    width 100%

  button:hover,
  button:active,
  button:focus
    background theme_light

  .message
    margin 15px 0 0
    font-size 12px

    a
      color theme_dark
      text-decoration none

  .error-message
    color #ff0020

  .success-message
    color #4f8a10

.advert-form
  padding 8% 0 0

  .form-container
    max-width: 600px

  .geosuggest
    position relative

  .geosuggest__suggests
    position absolute
    left 0
    right 0
    max-height 25em
    padding 0
    margin-top -15px
    background #ffffff
    border 1px solid #f2f2f2
    border-top-width 0
    overflow-x hidden
    overflow-y auto
    list-style none
    z-index 5

  .geosuggest__suggests--hidden
    max-height 0
    overflow hidden
    border-width 0

  .geosuggest__item
    text-align left
    padding .5em .65em
    cursor pointer

  .geosuggest__item:hover,
  .geosuggest__item:focus
    background #f5f5f5

  .geosuggest__item--active
    background theme_light
    color #fff

  .geosuggest__item--active:hover,
  .geosuggest__item--active:focus
    background #ccc

  .geosuggest__item__matched-text
    font-weight bold
